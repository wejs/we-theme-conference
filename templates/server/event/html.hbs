<!DOCTYPE html>
<html lang="{{locale}}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>

    {{#each event.favicon}}
      <link rel="shortcut icon" href="{{urls.thumbnail}}" type="image/x-icon" />
    {{/each}}

    {{{render-metadata-tags}}}
    {{{render-stylesheet-tags}}}
    {{{render-javascript-tags 'header'}}}

    {{#if _csrf}}<meta name="csrf-token" content="{{_csrf}}" />{{/if}}
</head>
<body class="{{model}} {{model}}-{{id}} cf cf-{{event.id}} {{action}}">
  {{we-event event="we-html-body-start"}}
  <header id="header" role="banner">
    <div class="main-nav">
      <div class="container">
        <div class="header-top">
          {{#can permission='manage_event' roleNames=req.userRoleNames}}
            <div class="pull-right social-icons">
              <ul class="list-inline join-us"><li>
                {{#link-to 'event_admin' event.id class="btn btn-empty-inverse btn-lg"}}
                  <span class="glyphicon glyphicon-cog"> Admin</span>
                {{/link-to}}
              </li></ul>
            </div>
          {{/can}}
          <div class="pull-right social-icons">
            {{{we-cf-menu event.socialMenu}}}
          </div>
        </div>
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
          </button>
          {{#link-to 'event.findOne' event.id class="navbar-brand"}}
            {{#each event.logo}}
              <img class="img-responsive" src="{{urls.medium}}" alt="{{../event.title}} logo">
            {{else}}
              <span class="nav-brand-text">{{event.abbreviation}}</span>
            {{/each}}
          {{/link-to}}
        </div>
        <div class="collapse navbar-collapse">
          {{we-menu userMenu}}
          {{{we-cf-menu event.mainMenu}}}
        </div>

      </div>
    </div>
  </header>
  <section id="home">
    <div class="highlighted">
    {{#each event.banner}}
      <img class="event-featured-image img-responsive" src="{{urls.original}}">
    {{/each}}
    </div>
  </section>

  {{{layoutHtml}}}

  {{{template 'footer'}}}
</body>
</html>