{{#if-have-plugin 'we-plugin-event-sponsor'}}
<div id="sponsor">
  <div class="container">
    <div class="row">
      <div class="col-sm-10">
        <h2>{{widget.title}}</h2>
        <div class="carousel-inner">
          <div class="item active">
            <ul>
              {{#each widget.partners}}
                <li>
                {{#if link}}
                  <a target="_blank" href="{{link}}">{{#each logo}}{{we-image this 'medium' class="img-responsive img-thumbnail"}}{{/each}}</a>
                {{else}}
