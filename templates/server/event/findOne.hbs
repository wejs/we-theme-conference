<section id="explore">
  <div class="container">
    <div class="row">
      <div class="watch">
        <img class="img-responsive" src="/public/theme/we-theme-event/images/watch.png" alt="">
      </div>
      <div class="col-md-4 col-md-offset-2 col-sm-5">
        <h2>{{t 'event.home.startDate'}}:</h2>
      </div>
      <div class="col-sm-7 col-md-6">
        <ul id="countdown">
          <li>
            <span class="days time-font">{{we-date event.eventStartDate 'MM'}}</span>
            <p>{{t 'event.month'}}</p>
          </li>
          <li>
            <span class="hours time-font">{{we-date event.eventStartDate 'DD'}}</span>
            <p class="">{{t 'event.days'}}</p>
          </li>
          <li>
            <span class="minutes time-font">{{we-date event.eventStartDate 'HH'}}</span>
            <p class="">{{t 'event.hours'}}</p>
          </li>
        </ul>
      </div>
    </div>
    {{#if-have-plugin 'we-plugin-event-ticket'}}
      <div class="cart">
        <a href="#tickets"><i class="fa fa-shopping-cart"></i> <span>{{t 'tickets.purchase'}}</span></a>
      </div>
    {{/if-have-plugin}}
  </div>
</section>

<section id="about">
  <div class="guitar2">
    <img class="img-responsive" src="/public/theme/we-theme-event/images/guitar2.jpg" alt="guitar">
  </div>
  <div id="content" role="main" class="about-content">
    <h1>{{title}}</h1>

    <div class="event-about">{{{data.about}}}</div>
    <br>
    <p class="event-dates">
      {{#with data}}
        <strong>{{t 'event.dates'}}:</strong> {{we-cf-date-range start=eventStartDate end=eventEndDate __=../__}}
      {{/with}}
    </p>
    <p class="event-contact">
      <strong>{{t 'form-event-email'}}</strong>: {{data.email}}
      <br>
      <strong>{{t "form-event-registrationManagerName"}}</strong>: {{data.registrationManagerName}}
      <br>
      <strong>{{t 'form-event-registrationManagerEmail'}}</strong>: {{data.registrationManagerEmail}}
    </p>
  </div>
</section>

{{#if-have-plugin 'we-plugin-event-ticket'}}
<div id="tickets">
  <div class="container">
    {{{template ticketsSelectorTemplate}}}
  </div>
</div>
{{/if-have-plugin}}

