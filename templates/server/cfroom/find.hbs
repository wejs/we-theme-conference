<div class="row">
  <div class="col-lg-12">
    <a class="btn btn-default" href="/conference/{{conference.id}}/admin/room/create">{{t 'Create'}}</a>
  </div>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover sorted_table" id="cfpagetable" we-search-field="title" we-dataTable-url="/conference/{{conference.id}}/admin/room">
          <thead>
            <tr>
              <th we-model-attr="id">{{t 'id'}}</th>
              <th we-model-attr="name">{{t 'name'}}</th>
              <th we-model-attr="userId">{{t 'about'}}</th>
              <th we-model-attr="weModelActions">{{t 'actions'}}</th>
            </tr>
          </thead>
          <tbody>
          {{#each record}}
            <tr>
              <td>{{id}}</td>
              <td>{{name}}</td>
              <td>{{about}}</td>
              <td></td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    we.components.dataTable('#cfpagetable', {
      where: { conferenceId: {{conference.id}} },
      actionRender: function actionRender(table, data, d,record) {
        var  tags = '<a href="/conference/{{conference.id}}/admin/room/'+record.id+'" text="{{t "Edit"}}" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-pencil"></i></a>';
        return tags;
      }      
    });
  });
</script>